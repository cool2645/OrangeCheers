.post-content {
  @media (max-width: 675px) {
    font-size: 0.9rem;
    line-height: 1.7rem;
  }
  font-size: 1rem;
  font-family: 'PT Serif', Georgia, Times, 'PingFang SC', 'Microsoft YaHei', sans-serif;
  letter-spacing: 0.009rem;
  line-height: 1.8rem;
  h1 {
    margin: 20px 0 10px;
    font-size: 1.375rem;
  }
  h2 {
    margin: 20px 0 10px;
    font-size: 1.25rem;
  }
  h3 {
    margin: 20px 0 10px;
    font-size: 1.125rem;
  }
  h4, h5, h6 {
    margin: 20px 0 10px;
    font-size: 1rem;
  }
  p, ul, ol, pre {
    @media (max-width: 675px) {
      margin-bottom: 0.5rem;
    }
    margin-bottom: 0.6rem;
  }
  li > p {
    margin-top: 0.6rem;
    @media (max-width: 675px) {
      margin-bottom: 0.5rem;
    }
  }
  ul, ol {
    padding-left: 2rem;
  }
  code, p code {
    margin: 0;
  }
  code, p code, pre {
    padding: 3px 5px;
    font-size: 85%;
    line-height: 1.25rem;
    background-color: rgba(0, 0, 0, 0.04);
    border-radius: 3px;
    font-family: Consolas, Menlo, Monaco, "Courier New", monospace;
  }
  a {
    text-decoration: underline dotted;
    text-decoration-color: initial;
    word-wrap:break-word;
  }
  img {
    max-width: 100%;
    vertical-align: middle;
    display: block;
    height: auto;
  }
  code, pre {
    white-space: pre-wrap;
    word-wrap: break-word;
    white-space: -moz-pre-wrap;
  }
  table {
    border-spacing: 0;
    border-collapse: collapse;
    margin-bottom: 0.6rem;
    box-shadow: 0 0 1px rgba(0, 0, 0, 0.22);
    th, td {
      padding: 6px 13px;
      border: 1px solid #dfe2e5;
    }
  }
  blockquote {
    color: #999;
    margin: 0.625rem 0.375rem;
    border-left: 4px solid #ef9a9a;
    padding: 1rem;
  }
  hr {
    margin: 20px auto;
  }
  iframe {
    position: relative !important;
  }
  iframe.wp-embedded-content {
    display: none;
  }
  .aligncenter {
    margin: 5px auto;
  }
  .tag {
    display: inline-block;
    position: relative;
    padding: .5rem 1rem;
    margin: 5px;
    border-radius: 9rem;
    font-size: 1rem;
    border-bottom: 0!important;
    text-decoration: none;
    a {
      text-decoration: none;
    }
  }
}